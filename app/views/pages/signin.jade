doctype 
html
	head
		meta(charset='utf-8')
		title #{title}
	body
		form(method="POST",action="/user/signin")
			h1 登录
			label(for="signinName") 用户名
			input#signinName(type="text",name="user[name]")
			label(for="signinPassword") 密码
			input#signinPassword(type="text",name="user[password]")
			button(type="submit") 提交